
<div class="header">
  <img src="https://congressoemfoco.uol.com.br/wp-content/uploads/2018/03/PM_RJ_T%C3%A2niaRego_Abr.jpg">
</div>
<div class="container-show">
  <div class="row">
    <div class="col-10">
      <div class='text-center'>
        <!-- Content here -->
        <!-- -->
        <h1>Yours incidents reported</h1>
        <%= cl_image_tag @incident.photo.key, height: 600, width: 800, crop: :thumb if @incident.photo.attached? %>
        <div class="information">
          <div class="card-show w-100">
            <h3 class="card-title-show">General information</h3>
            <p><strong>Title: </strong><%= @incident.title %></p>
            <p><strong>Address: </strong><%= @incident.address %></p>
            <p><strong>Incident Type: </strong><%= @incident.incident_type %></p>
            <p><strong>Time: </strong><%= @incident.time %></p>
            <p><strong>Date: </strong><%= @incident.date %></p>
          </div>
          <div class="card-show w-100" style="height: 200px;">
            <h3 class="card-title-show">Description:</h3>
            <p class="card-text">
              <%= @incident.description %></p>
          </div>
        </div>
        <div class="card-show w-100" style="margin-left: 55px;">
          <strong>
            <p>Location Information:</p>
          </strong>
          <div class="container" style="width: 100%; height: 600px;"
      data-controller="mapbox" data-mapbox-markers-value="<%= @markers.to_json %>"
      data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
        </div>
      </div>
    </div>
    <div class="col-2">
      <div class="logo-box">
        <div class="card-show" style="width: 14rem;background-color: #011E30;">
          <div class="card-img" style="text-align: center;">
            <img src="/assets/logo-be5c1e37a2ec66ceb869e99b6da404da4fb050884e712e72a4dc31b8b24f1844.png" style="width: 150px; height: 150px;">
          </div>
          <div class="container-content">
            <h2 class="card-title"> <strong> STAYSAFE </strong></h2>
            <p class="card-text">Get around the city without a care in the world.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= link_to 'edit', edit_incident_path(@incident) %>
<%= link_to 'back', incidents_path %>
<%= link_to "Destroy", @incidents, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
