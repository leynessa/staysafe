<h1>
use to report a incident page
</h1>
<%= simple_form_for (@incident) do |f| %>
    <div class="form-group ">
      <strong> <%= f.input :title %> </strong>
      <strong><%= f.input :incident_type %></strong>
       <%= f.input :address,
              input_html: { data: { geocoder_target: "address" }, class: "d-none" },
              wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %>

      <strong><%= f.input :time %></strong>
      <%= f.input :photo, as: :file %>
      <strong><%= f.input :date %></strong>
      <strong><%= f.input :description %></strong>

    </div>
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
